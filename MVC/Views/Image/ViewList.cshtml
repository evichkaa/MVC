<link href="~/Content/My.css" rel="stylesheet" type="text/css" />
@model IEnumerable<MVC_F83345.Models.UploadImgModel>

@{
    ViewBag.Title = "ViewList";
}

<h2>Image List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImgName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImgPath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ImageID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImgName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImgPath)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailID)
        </td>
        <td>
            @Html.ActionLink("View Image", "View", new { id = item.ImageID })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Back", "Index", "Home")
</p>